{
  "name": "omniphi-local-validator",
  "version": "1.0.0",
  "description": "Omniphi Local Validator Desktop Application",
  "main": "electron/main.js",
  "author": "Omniphi",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://127.0.0.1:4200 && electron .\"",
    "dev:react": "vite",
    "build:react": "tsc && vite build",
    "build": "npm run build:react && electron-builder",
    "build:win": "npm run build:react && electron-builder --win",
    "build:mac": "npm run build:react && electron-builder --mac",
    "build:linux": "npm run build:react && electron-builder --linux"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "express": "^4.18.2",
    "keytar": "^7.9.0",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.10.3",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.0",
    "systeminformation": "^5.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.omniphi.local-validator",
    "productName": "Omniphi Local Validator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "dist-react/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png",
      "category": "Utility"
    }
  }
}
